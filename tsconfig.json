{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "source",
    "paths": {
      "*": [
        "declarations/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".sandbox"
  ]
}
